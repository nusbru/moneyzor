@page "/transactioncategories/delete"
@using Microsoft.EntityFrameworkCore
@using moneyzor.Entities
@inject IDbContextFactory<moneyzor.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>TransactionCategory</h2>
    <hr />
    @if (transactioncategory is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@transactioncategory.Name</dd>
        </dl>
        <EditForm method="post" Model="transactioncategory" OnValidSubmit="DeleteTransactionCategory" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(transactioncategory is null)">Delete</button> |
            <a href="/transactioncategories">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private TransactionCategory? transactioncategory;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        transactioncategory = await context.TransactionCategory.FirstOrDefaultAsync(m => m.Id == Id);

        if (transactioncategory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteTransactionCategory()
    {
        using var context = DbFactory.CreateDbContext();
        context.TransactionCategory.Remove(transactioncategory!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/transactioncategories");
    }
}
