@page "/transactioncategories/edit"
@using Microsoft.EntityFrameworkCore
@using moneyzor.Entities
@inject IDbContextFactory<moneyzor.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>TransactionCategory</h2>
<hr />
@if (TransactionCategory is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="TransactionCategory" OnValidSubmit="UpdateTransactionCategory" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary />
                <input type="hidden" name="TransactionCategory.Id" value="@TransactionCategory.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="TransactionCategory.Name" class="form-control" />
                    <ValidationMessage For="() => TransactionCategory.Name" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/transactioncategories">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private TransactionCategory? TransactionCategory { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        TransactionCategory ??= await context.TransactionCategory.FirstOrDefaultAsync(m => m.Id == Id);

        if (TransactionCategory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateTransactionCategory()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(TransactionCategory!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!TransactionCategoryExists(TransactionCategory!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/transactioncategories");
    }

    private bool TransactionCategoryExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.TransactionCategory.Any(e => e.Id == id);
    }
}
