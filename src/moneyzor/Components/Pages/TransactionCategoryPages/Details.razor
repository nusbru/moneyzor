@page "/transactioncategories/details"
@using Microsoft.EntityFrameworkCore
@using moneyzor.Entities
@inject IDbContextFactory<moneyzor.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>TransactionCategory</h2>
    <hr />
    @if (transactioncategory is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@transactioncategory.Name</dd>
        </dl>
        <div>
            <a href="@($"/transactioncategories/edit?id={transactioncategory.Id}")">Edit</a> |
            <a href="@($"/transactioncategories")">Back to List</a>
        </div>
    }
</div>

@code {
    private TransactionCategory? transactioncategory;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        transactioncategory = await context.TransactionCategory.FirstOrDefaultAsync(m => m.Id == Id);

        if (transactioncategory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
